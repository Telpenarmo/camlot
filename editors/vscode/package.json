{
  "name": "rideml-analyzer",
  "displayName": "rideml-analyzer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "author": "Telpenarmo",
  "publisher": "Telpenarmo",
  "repository": "https://github.com/Telpenarmo/rideml",
  "contributes": {
    "languages": [
      {
        "id": "rideml",
        "extensions": [
          ".rml",
          ".rmli"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "rideml-analyzer.syntaxTree",
        "title": "Show Syntax Tree",
        "category": "RideML"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package --no-dependencies --skip-license -o out/rideml-analyzer.vsix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "~18.19.33",
    "@types/vscode": "~1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.26.1",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
